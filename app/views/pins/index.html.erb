<div class="panel panel-default">

  <div class="panel-heading">
    <h1>Listing Pins</h1>
  </div>

  <div class="panel-body">

    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>User ID</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= link_to pin.description, pin %></td>
            <td><%= link_to pin.user.email, pin if pin.user %></td>
            <td>
              <% if pin.user == current_user %>
                <%= link_to 'Edit', edit_pin_path(pin) %> |
                <%= link_to 'Destroy', pin, method: :delete %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path %>
    <% end %>
  </div>
</div>